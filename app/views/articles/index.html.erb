<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <% #unless article.archived %>
    <li>
      <%= link_to article.title, article, class: 'article_title', id: "article_#{article.id}" %>
    </li>
    <% #end %>
  <% end %>
</ul>
<% if logged_in? %>
	<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
<% end %>
